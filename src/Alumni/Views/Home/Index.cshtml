@model IEnumerable<Alumni.Models.DBUser>
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Pagina Principala";
}

<h4>Cautare</h4>
<div>
    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            <input type="text" name="SearchString">
            <input type="submit" value="Cautati" />
        </p>
    </form>
</div>

@if (@Context.Session.GetString("SuccessfulSearch") == "Yes")
{
    <h4>Rezultatele Cautarii</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.fName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.lName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone_Number)
                </th>
                <th>
                    Curriculum
                </th>               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.fName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone_Number)
                    </td>  
                    <td>
                        <a asp-controller="DBUsers" asp-action="Curriculum" asp-route-id="@item.UserID">CV</a>
                    </td>                 
                </tr>
            }
        </tbody>
    </table>
}
else if(@Context.Session.GetString("SuccessfulSearch") == "No")
{
<div id="search-results">
    <h4>Rezultatele Cautarii</h4>
    <p>
        "Your search provided no results. Please make sure that all words are spelled correctly and that you've selected enough categories."
    </p>
</div>
}


